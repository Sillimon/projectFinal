
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <meta charset="utf-8">
        <title>Toto</title>
        <link rel="stylesheet" type="text/css" href="~/Content/CSS/Index.css" />
    </head >
                <body>
                    <div>
                        <!--Navbar du haut-->
                <ul>
                                <li style="float: left"><img src="~/cropped-logo.png" class="logo"></li>
                                <li style="float:center"><a href="#news" class="titre">Guld StrawPoll</a></li>
                                <li style="float:right"><a href="#contact" class="btnConnect">Connect</a></li>
                                <li style="float: right"><a href="#about" class="btnLog">LogIn</a></li>
                </ul>
                            <!-- Gérer les charts -->
                <div class="txtMid">
                    @{
                        var myChart = new Chart(600, 400)
                           .AddTitle(@ViewBag.StrawPoll.getStrawPollQuestion())
                           .AddSeries(chartType: "column",
                              xValue: new[] { @ViewBag.aOne, @ViewBag.aTwo, @ViewBag.aThree, @ViewBag.aFour},
                              yValues: new[] { @ViewBag.vOne, @ViewBag.vTwo, @ViewBag.vThree, @ViewBag.vFour});

                        if (myChart != null)
                        {
                            myChart.Write();
                        }
                        
                    }

                    <!-- Copyright-->
                    <p id="copyright">Copyright 2018. Tous droits réservés</p>
                </div>
            </div>
    </body>

</html>
